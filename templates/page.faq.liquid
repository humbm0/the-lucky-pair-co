{% capture hero_img %}hero_faq.jpg{% endcapture %}
<div class="hero hero-small">
  <div class="hero-image parallax" style="background-image: url('{{ hero_img | asset_img_url: '2048x2048' }}');">
    <div class="hero-text {{ settings.hero_faq_text_color }}">
        <h3>{{ settings.hero_faq_subheading }}</h3>
        <hr>
        <h1>{{ page.title }}</h1>
    </div>
  </div>
</div>

<div class="container faq">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      {{ page.content }}
    </div>
  </div>
</div>
